---
import Layout from '../layouts/Layout.astro';
---

<Layout title="Page not found">
	<main>
        <h1>Page not found</h1>
        <p>The page you're looking for wasn't found.<p>
    </main>
</Layout>

<style>
	main {
		margin: 0 auto;
		width: fit-content;
	}
	h1 {
		padding: 0 1em;
		border-bottom: 1px solid lightgray;
	}
	p {
		text-align: center;
	}

</style>
