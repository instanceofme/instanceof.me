---
import Layout from '../layouts/Layout.astro';
import IconLink from '../components/IconLink.astro';
import { Picture } from 'astro:assets';
import photo from '../assets/photo.jpg';
---

<Layout title="instanceof me" description=""><div class="wrapper">
	<main class="small-page">
		<h1><code>instanceof</code> me</h1>
		<ul role="list" class="link-list">
			<li class="link-list__item">
				<IconLink icon="/icons/instagram.svg"
					href="https://instagram.com/instanceofme"
					alt="Instagram" title="Instagram: @instanceofme"
					>@instanceofme</IconLink>
			</li>
			<li class="link-list__item">
				<IconLink icon="/icons/linkedin.svg"
					href="https://www.linkedin.com/in/lavoillotte/"
					alt="LinkedIn" title="LinkedIn: Adrien Lavoillotte"
					>Adrien Lavoillotte</IconLink>
			</li>
			<li class="link-list__item">
				<IconLink icon="/icons/github.svg"
					href="https://github.com/instanceofme"
					alt="GitHub" title="GitHub: @instanceofme"
					>@instanceofme</IconLink>
			</li>
			<li class="link-list__item">
				<IconLink icon="/icons/stackoverflow.svg"
					href="https://stackoverflow.com/users/119212/instanceof-me"
					alt="Stack Overflow" title="Stack Overflow: instanceof me"
					>instanceof me</IconLink>
			</li>
			<li class="link-list__item">
				<IconLink icon="/icons/tumblr.svg"
					href="https://instanceofme.tumblr.com"
					alt="tumblr" title="tumblr: instanceofme"
					>instanceofme</IconLink>
			</li>
			<li class="link-list__item link-list__item--special">
				<IconLink icon="/icons/archive.svg"
					href="/archives"
					alt="Archives"
					scale={1.2} translate={-0.1}>Archives</IconLink>
			</li>
		</ul>
	</main>
	<aside>
		<Picture
			class="photo"
			src={photo}
			formats={['webp']}
			alt="Photo"
			width={photo.width/4}
			densities={[1, 2, 3, 4]}
		/>
	</aside>
</div></Layout>

<style>
	.wrapper {
		display: flex;
		flex-wrap: wrap;
		justify-content: center;
		align-items: center;
		gap: 1rem;
	}
	main {
		margin: 0;
		height: fit-content;
	}

	main code {
		font-weight: normal;
		color: green;
	}

	.link-list {
		display: block;
		width: fit-content;
		margin: 1em auto;
		padding: 0;
		text-align: left;
		font-size: 2em;
	}
	@media (max-width: 35rem), (max-height: 35rem) {
		.link-list {
			font-size: 1.8em;
		}
	}
	@media (max-width: 28rem), (max-height: 28rem) {
		.link-list {
			font-size: 1.6em;
		}
	}
	.link-list__item {
		display: block;
	}
	.link-list__item--special {
		margin-top: .2em;
		padding-top: .1em;
		border-top: 1px solid lightgray;
	}

	.photo {
		display: block;
		margin: 0 auto;
		max-width: 100%;
		height: auto;
		width: auto;
		max-height: calc(100vh - 2rem);
	}
</style>
